@model Test.Models.InsuranceAutoCitizen;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Автоцивілка</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script><!--подключение jquery-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/autocivil.css" />
</head>


<body>
    <div id="order">
        <div class="container">
            <form asp-action="autocitizen" asp-controller="home">
                <div class="validation" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="NSF" class="control-label">@Localizer["SNP"]</label>
                    <input type="text" asp-for="NSF" class="form-control" value="@if (ViewBag.User != null) @ViewBag.NSF" />
                    <span asp-validation-for="NSF"></span>

                </div>

                <div class="form-group">
                    <input asp-for="Engine" type="radio" value="до 1,6л" /><span>@Localizer["Engine_1"]</span> <br />
                    <input asp-for="Engine" type="radio" value="1,6 - 2л" /><span>@Localizer["Engine_2"] </span> <br />
                    <input asp-for="Engine" type="radio" value="2 - 3л" /><span>@Localizer["Engine_3"]</span> <br />
                    <input asp-for="Engine" type="radio" value="більш 3л" /><span>@Localizer["Engine_4"] </span>
                    <span asp-validation-for="Engine"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Date" class="control-label">@Localizer["Date"]</label>
                    <input type="date" asp-for="Date" id="datepicker" class="form-control">
                    <span asp-validation-for="Date"></span>

                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label">@Localizer["City"]</label>
                    <input type="text" asp-for="City" class="form-control" />
                    <span asp-validation-for="City"></span>

                </div>
                <div class="form-group">
                    <label asp-for="RoadAccident" class="control-label">@Localizer["RoadAccident"]: </label>
                    <select asp-for="RoadAccident" class="form-control">
                        <option value="0" selected="selected">0 грн. </option>
                        <option value="100 000">+ 100 000 грн.</option>
                        <option value="200 000">+ 200 000 грн.</option>
                        <option value="300 000">+ 300 000 грн.</option>
                        <option value="400 000">+ 400 000 грн.</option>
                        <option value="500 000">+ 500 000 грн.</option>
                        <option value="600 000">+ 600 000 грн.</option>
                        <option value="750 000">+ 750 000 грн.</option>
                        <option value="1 000 000">+ 1 000 000 грн.</option>
                    </select>
                    <span asp-validation-for="RoadAccident"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Franchise" class="control-label">@Localizer["Franchise"]: </label>
                    <select asp-for="Franchise" class="form-control">
                        <option value="0" selected="selected">0 грн. </option>
                        <option value="1300">1300 грн.</option>
                        <option value="2600">2600 грн.</option>
                    </select>
                    <span asp-validation-for="Franchise"></span>

                </div>

                <div class="form-group">
                    <input type="submit" value="Відправити" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

</body>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
