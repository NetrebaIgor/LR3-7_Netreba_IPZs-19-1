@model Test.Models.User
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = "Редактирование пользователя";
}

<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/log.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div>
        <label asp-for="Name">@Localizer["Name"]</label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Surname">@Localizer["Surname"]</label><br />
        <input asp-for="Surname" />
        <span asp-validation-for="Surname"></span>
    </div>
    <div>
        <label asp-for="Petronymic">@Localizer["Petronymic"]</label><br />
        <input asp-for="Petronymic" />
        <span asp-validation-for="Petronymic"></span>

    </div>
    <div>
        <label asp-for="Phone">@Localizer["Phone"]</label><br />
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>

    </div>
    <div>
        <label asp-for="Email">@Localizer["Email"]</label><br />
        <input type="text" asp-for="Email" />
        <span asp-validation-for="Email"></span>

    </div>
    <div>
        <label asp-for="Password">@Localizer["Password"]</label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>

    </div>
    <div style="visibility: hidden">
        <label asp-for="RoleId"></label><br />
        <input asp-for="RoleId" />

    </div>
    <div class="form-group">
        <input type="submit" value="@Localizer["Save"]" class="btn btn-default" />
    </div>
</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}